<Page x:Class="DekstopClient.View.NavigationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DekstopClient.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NavigationPage">

    <Grid>
        <StackPanel Width="500" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="НАПРАВЛЕНИЕ ПАЦИЕНТОВ НА ЛЕЧЕБНО-ДИАГНОСТИЧЕСКИЕ МЕРОПРИЯТИЯ"/>
            <Button x:Name="ButtonTherapeuticMesuares" Content="Перейти" Margin="0, 0, 0, 30" Click="ButtonTherapeuticMesuares_Click"/>

            <Label Content="ВЕДЕНИЕ РАСПИСАНИЙ ПРИЕМА"/>
            <Button x:Name="ButtonSchedule" Content="Перейти" Click="ButtonSchedule_Click"/>
        </StackPanel>
    </Grid>
</Page>
